<?xml version="1.0" encoding="utf-8"?>
<manifest package="se329.clue"
          xmlns:android="http://schemas.android.com/apk/res/android">

  <application
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:supportsRtl="true"
    android:theme="@style/AppTheme">
    <activity
      android:name=".NotepadActivity"
      android:label="@string/app_name"
      android:theme="@style/AppTheme.NoActionBar">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
    <activity
      android:name=".SuggestionActivity"
      android:label="@string/title_activity_turn"
      android:theme="@style/AppTheme.NoActionBar">
    </activity>
    <activity
      android:name=".TitleScreen"
      android:label="@string/title_activity_title_screen"
      android:theme="@style/AppTheme.NoActionBar">
    </activity>
    <activity
      android:name=".NewGameActivity"
      android:label="@string/title_activity_new_game"
      android:theme="@style/AppTheme.NoActionBar">
    </activity>
    <activity
      android:name=".MyCardsActivity"
      android:label="@string/title_activity_my_cards"
      android:theme="@style/AppTheme.NoActionBar">
    </activity>
  </application>

</manifest>