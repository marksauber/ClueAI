<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:paddingBottom="@dimen/activity_vertical_margin"
  android:paddingLeft="@dimen/activity_horizontal_margin"
  android:paddingRight="@dimen/activity_horizontal_margin"
  android:paddingTop="@dimen/activity_vertical_margin"
  app:layout_behavior="@string/appbar_scrolling_view_behavior"
  tools:context=".SuggestionActivity"
  tools:showIn="@layout/activity_turn">

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
      android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="Prediction"
    android:id="@+id/textView0"
      android:layout_marginTop="40dp"
    android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/editText"
        android:layout_below="@+id/textView0"
        android:layout_alignParentStart="true"
        android:text="Suspect"/>

  <Spinner
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/suspects"
    android:layout_below="@+id/editText"
    android:layout_alignEnd="@+id/weapons"/>



  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
      android:textAppearance="?android:attr/textAppearanceSmall"
    android:id="@+id/editText2"
    android:text="Weapon"
    android:layout_below="@+id/suspects"
    android:layout_alignParentStart="true"/>

  <Spinner
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/weapons"
    android:layout_below="@+id/editText2"
    android:layout_alignParentStart="true"/>

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
      android:textAppearance="?android:attr/textAppearanceSmall"
    android:id="@+id/editText3"
    android:text="Room"
    android:layout_below="@+id/weapons"
    android:layout_alignParentStart="true"/>

  <Spinner
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/rooms"
    android:layout_below="@+id/editText3"
    android:layout_alignParentStart="true"/>

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceSmall"
    android:text="Who made the prediction?"
    android:id="@+id/textView1"
    android:layout_below="@+id/rooms"
    android:layout_alignParentStart="true"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/player_turn"
        android:layout_below="@+id/textView1"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Who disproved it?"
        android:id="@+id/textView2"
        android:layout_below="@+id/player_turn"
        android:layout_alignParentStart="true"/>

  <Spinner
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/player_disproved"
    android:layout_below="@+id/textView2"
    android:layout_alignParentStart="true"/>

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceSmall"
    android:text="What kind of Card did you see if its your turn"
    android:id="@+id/textView3"
    android:layout_below="@+id/player_disproved"
    android:layout_alignParentStart="true"/>

  <Spinner
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/card_kind"
    android:layout_below="@+id/textView3"
    android:layout_alignParentStart="true"/>

  <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/saveButton"
      android:layout_below="@+id/card_kind"
      android:text="Save"/>

</RelativeLayout>
</ScrollView>